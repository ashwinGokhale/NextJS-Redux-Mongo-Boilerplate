{
	"watch": ["backend/**/*.ts"],
	"execMap": {
		"ts": "node --require ts-node/register"
	},
	"restartable": "rs",
	"ignore": [".git", "node_modules", "src/__generated__", "dist", "frontend/.next", "data"],
	"env": {
		"TS_NODE_PROJECT": "./tsconfig.server.json",
		"TS_NODE_TRANSPILE_ONLY": true
	},
	"ext": "js,json,ts,tsx,graphql"
}
