	"version": "1.0.0",
	"description": "nextjs-redux-boilerplate",
	"scripts": {
		"dev": "nodemon backend/index.ts",
		"clean": "rimraf dist",
		"build-client": "cd frontend && next build",
		"build-server": "tsc --project tsconfig.server.json",
		"build": "NODE_ENV=production npm run clean && npm run build-client && npm run build-server",
		"test": "NODE_ENV=test jest -i --detectOpenHandles",
		"start": "NODE_ENV=production node dist/index.js",
		"start-ts": "NODE_ENV=production ts-node --compilerOptions '{\"module\":\"commonjs\"}' backend/index.ts"
	},
