{
	"defaultSeverity": "error",
	"extends": ["tslint:recommended", "tslint-config-prettier"],
	"jsRules": {},
	"linterOptions": {
		"exclude": ["node_modules/**", "**/.next/**", "dist/**"]
	},
	"rules": {
		"indent": false,
		"no-tabs": false,
		"linebreak-style": [true, "LF"],
		"quotes": ["error", "single"],
		"semi": ["error", "always"],
		"no-underscore-dangle": false,
		"import/prefer-default-export": false,
		"no-console": false,
		"function-paren-newline": false,
		"arrow-parens": false,
		"curly": false,
		"object-curly-newline": false,
		"no-confusing-arrow": false,
		"no-return-assign": false,
		"no-param-reassign": false,
		"no-unused-expressions": false,
		"no-nested-ternary": false,
		"no-var-requires": false,
		"ordered-imports": false,
		"object-literal-sort-keys": false,
		"array-type": [true, "array"],
		"member-access": false,
		"interface-over-type-literal": false,
		// "newline-per-chained-call": [true, { "ignoreChainWithDepth": 2 }],
		// "newline-per-chained-call": [true, { "max-calls-per-line": 2 }],
		"comma-dangle": false
	},
	"rulesDirectory": []
}
